<div class="row">
  <div class="col-lg-6">
    <h2>Editar usuario</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :name, "Nombre", class: "form-label mb-2" %>
        <%= f.text_field :name, autofocus: true, class: "form-control"%>
      </div>

      <div class="field mb-3">
        <%= f.label :email, "Correo", class: "form-label mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Esperando confirmación: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-3">
        <%= f.label :password, "Contraseña", class: "form-label mb-2" %> <i>(Dejalo en blanco si no quieres cambiarla)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> Caracteres minimos</em>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password, "Contraseña actual", class: "form-label mb-2" %> <i>(Necesitamos tu contraseña actual para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :phone, "Teléfono", class: "form-label mb-2" %>
        <%= f.text_field :phone, autofocus: true, required: true, class: "form-control"%>
      </div>

      <div class="field mb-3">
        <%= f.label :about, "Teléfono", class: "form-label mb-2" %>
        <%= f.text_area :about, autofocus: true, required: true, class: "form-control"%>
      </div>

      <div class="field mb-3">
        <%= f.label :avatar, "Foto de perfil", class: "form-label mb-2" %>
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>

      <div class="actions mb-5">
        <%= f.submit "Confirmar cambios", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>Cancelar mi cuenta</h3>

    <div class="mb-5">¿No estas datisfecho? <br><br><%= button_to "Borrar cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></div>

    <div class="d-flex justify-content-center">
      <%= link_to "Volver", :back, class: "btn btn-outline-primary mb-5" %>
    </div>
       
  </div>
</div>



